@model Reading_Reviewys.Models.Utilizador

@{
    ViewData["Title"] = "Detalhes do Utilizador";
}

<h1>Detalhes do Utilizador</h1>

<div>
    <h4>Utilizador</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        @if (User.Identity.IsAuthenticated)
        {
            <text>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Role)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Role)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Data_Entrada)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Data_Entrada)
                </dd>
            </text>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem_Perfil)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Imagens/@Html.DisplayFor(model => model.Imagem_Perfil)"
                 alt="Imagem de Perfil @Html.DisplayFor(model => model.Imagem_Perfil)"
                 title="@Html.DisplayFor(model => model.Imagem_Perfil)"
                 width="75px" />
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrador"))
    {
        <text>
            <a asp-action="Index">Regressar à listagem</a>
        </text>
    }
</div>
