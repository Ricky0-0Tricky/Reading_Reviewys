@model Reading_Reviewys.Models.Reviews

@{
    ViewData["Title"] = "Editar Review";
}

<h1 class="mb-4">Editar Review</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Review</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdReview" />

                    <div class="form-group">
                        <label asp-for="DescricaoReview" class="control-label">Descrição da Review</label>
                        <textarea asp-for="DescricaoReview" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="DescricaoReview" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
