@{
    ViewData["Title"] = "Evolução de Role";
}

@* Form para preenchimento de dados bancários*@
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card" style="background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <div class="card-body">
                    <h5 class="card-title text-center" style="color: #007bff;">Evolução de Role</h5>
                    <form asp-action="Evoluir" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="nomeCartao">Nome</label>
                            <input type="text" class="form-control" id="nomeCartao" name="nomeCartao" placeholder="Introduza o seu nome" maxlength="30" required>
                        </div>
                        <div class="form-group">
                            <label for="numCartao">Número do Cartão</label>
                            <input type="text" class="form-control" id="numCartao" name="numCartao" placeholder="Introduza o número do cartão" pattern="[0-9]*" maxlength="16" title="Apenas números são permitidos (máximo de 16 dígitos)" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="expCartao">Data de Expiração</label>
                                <input type="text" class="form-control" id="expCartao" name="expCartao" placeholder="MM/YY" pattern="(0[1-9]|1[0-2])\/([0-9]{2})" title="Formato válido: MM/YY" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="cvvCartao">CVV</label>
                                <input type="text" class="form-control" id="cvvCartao" name="cvvCartao" placeholder="CVV" pattern="[0-9]{3,4}" title="Apenas 3 ou 4 dígitos são permitidos" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Pagar</button>
                    </form>
                </div>
            </div>
        </div>
        @* Perks que o utilizador ganha a evoluir de role *@
        <div class="col-md-5">
            <div class="card" style="background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <div class="card-body">
                    <h5 class="card-title text-center" style="color: #6610f2;">Role: Priveligiado</h5>
                    <p class="card-text" style="color: #495057;">O role <strong>Priveligiado</strong> oferece aos utilizadores benefícios exclusivos e privilégios originados para melhorar a sua experiência. Como Membro Priveligiado, tu receberás:</p>
                    <ul style="color: #495057;">
                        <li><strong>Apoio Prioritário:</strong> Comunicação direta com os Administradores com tempos de espera baixos.</li>
                        <li><strong>Acesso Direto a Autores:</strong> Possibilidade de visualizar/comunicar com os Autores registados no site. </li>
                        <li><strong>Acesso Antecipado a Overhauls:</strong> Visualização antecipada de overhauls gráficos ao site com possibilidade de dar sugestões.</li>
                        <li><strong>Beta Testing:</strong> Oportunidade de participar em beta tests de novas funcionalidades do site.</li>
                    </ul>
                    <p class="card-text" style="color: #495057;">Evolui de role e desbloqueia estas perks para desfrutares de uma experiência exclusiva!</p>
                </div>
            </div>
        </div>
    </div>
</div>