@{
    ViewData["Title"] = "Evolução de Role";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Evoluir" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="nomeCartao">Nome</label>
                            <input type="text" class="form-control" id="nomeCartao" name="nomeCartao" placeholder="Introduza o seu nome" maxlenght="30">
                        </div>
                        <div class="form-group">
                            <label for="numCartao">Número do Cartão</label>
                            <input type="text" class="form-control" id="numCartao" name="numCartao" placeholder="Introduza o número do cartão"
                                   pattern="[0-9]*" maxlength="16" title="Apenas números são permitidos (máximo de 16 dígitos)" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="expCartao">Data de Expiração</label>
                                <input type="text" class="form-control" id="expCartao" name="expCartao" placeholder="MM/YY"
                                       pattern="(0[1-9]|1[0-2])\/([0-9]{2})" title="Formato válido: MM/YY" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="cvvCartao">CVV</label>
                                <input type="text" class="form-control" id="cvvCartao" name="cvvCartao" placeholder="CVV"
                                       pattern="[0-9]{3,4}" title="Apenas 3 ou 4 dígitos são permitidos" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Pagar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>