@model Reading_Reviewys.Models.Comentarios
@using System.Security.Claims

@{
    ViewData["Title"] = "Detalhes de Comentário";

    // Obtenção do ID do user atual
    var userID = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<h1>Detalhes do Comentário</h1>

<div>
    <h4>Comentarios</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Review)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Review.DescricaoReview)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CriadorComentario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CriadorComentario.Username)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && userID == Model.CriadorComentarioFK.ToString())
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    }
    <a asp-action="Index">Regressar à listagem</a>
</div>
