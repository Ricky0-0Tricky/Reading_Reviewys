@page
@model Reading_Reviewys.Pages.IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group mb-3 text-center">
                <label asp-for="ImagemPerfil" class="form-label">Imagem de Perfil Atual</label>
                <div class="d-block mb-3">
                    <img src="~/Imagens/@Model.Imagem_Perfil" alt="Imagem de Perfil" class="img-thumbnail rounded-circle" style="width: 150px; height: 150px;" />
                </div>
                <input asp-for="ImagemPerfil" class="form-control" type="file" />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Escolha um username." />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Salvar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
